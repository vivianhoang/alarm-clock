{
  "compilerOptions": {
    "allowJs": true,
    "target": "es6",
    "jsx": "react",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "es2015",
    "strictNullChecks": false,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",
    "types": []
  },
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    }
  },
  "include": [
    "src/**/*.ts*"
  ],
  "exclude": [
    "node_modules"
  ]
}